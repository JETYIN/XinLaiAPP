<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" >
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- xinlai Application theme -->
    <style name="XinLai" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/app_basicbg_window_color</item>
        <item name="android:editTextStyle">@style/XinLai.EditText</item>
        <item name="android:textViewStyle">@style/XinLai.TextView</item>
        <item name="android:buttonStyle">@style/XinLai.Button</item>
        <item name="android:scrollViewStyle">@style/XinLai.ScrollView</item>
        <item name="android:listViewStyle">@style/XinLai.ListView</item>
    </style>
    <!--app start-->
    <style name="Theme.AppStartLoad" parent="android:Theme">
        <item name="android:windowBackground">@drawable/splash_an</item>
        <item name="android:windowNoTitle">true</item>
    </style>


</resources>