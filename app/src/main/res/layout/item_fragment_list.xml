<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_item_lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.work.xinlai.component.AvatarView
            android:id="@+id/av_rank_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:scaleType="centerCrop"
            android:onClick="onClick"
            android:src="@drawable/pic_user_face"
            app:borderType="circle"
            app:cornerRadius="100dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_hosetname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大写的帅"
                    android:textColor="#515151"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_hosetschool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="电子科技大学"
                    android:textColor="#b4b4b4"
                    android:textSize="11sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_hosetwealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="1314121"
                android:textColor="#cdcdcd"
                android:textSize="12sp" />
        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:background="#ffffff" />
</LinearLayout>
